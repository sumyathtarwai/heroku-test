<% content_for :page_title, @post.title %>

<section>
<!-- Main container -->
<nav class="level">
  <!-- Left side -->
  <div class="level-left">
    <div class="level-item">
      <p class="subtitle is-5">
        <strong>123</strong> view
      </p>
    </div>
    </div>
  </div>

  <!-- Right side -->
  <div class="level-right">
    <p class="level-item">
  	<%= link_to "Edit", edit_post_path(@post.id), class: "button is-success" %>
    </p>
       <p class="level-item">
  	<%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure?"}, class: "button is-danger" %>
    </p>
  </div>

</nav>

<hr/>
<div class="content">
	
	<%= @post.content%> 

</div>

</section>

<section class="section comments">
	<div class="container">
   <h2 class="subtitle is-5">
     <strong>
       <%= @post.comments.count %>
     </strong>
     comments
   </h2>
   <%= render @post.comments %>
   <div class="comment-form">
     <hr/>
     <h3 class="subtitle is-3">Leave a reply
      <%= render 'comments/form' %>
     </h3>
   </div>
  </div>
</section>